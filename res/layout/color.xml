<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/checkBoxcolor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="빨강" />

        <RadioButton
            android:id="@+id/checkBoxcolor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주황" />

        <RadioButton
            android:id="@+id/checkBoxcolor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="노랑" />

        <RadioButton
            android:id="@+id/checkBoxcolor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="초록" />

        <RadioButton
            android:id="@+id/checkBoxcolor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="파랑" />

        <RadioButton
            android:id="@+id/checkBoxcolor6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="보라" />

        <RadioButton
            android:id="@+id/checkBoxcolor7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="검정" />

        <RadioButton
            android:id="@+id/checkBoxcolor8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="그레이" />

        <RadioButton
            android:id="@+id/checkBoxcolor9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="화이트" />

    </RadioGroup>


</LinearLayout>