<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9ecef">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/checkBoxcolor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/checkBoxcolor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/checkBoxcolor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="#FFD400"
            android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/checkBoxcolor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="@android:color/holo_green_light"
            android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/checkBoxcolor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="#0067A3"
            android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/checkBoxcolor6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="#808080"
            android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/checkBoxcolor7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="#000000"
            android:layout_marginBottom="3dp"/>

        <Button
            android:id="@+id/checkBoxcolor8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            app:backgroundTint="#FFFFFF"
            android:layout_marginBottom="3dp"/>

    </RadioGroup>


</LinearLayout>