<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ecef"
    android:id="@+id/parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/top_menu"
        app:layout_constraintTop_toTopOf="@+id/parent"
        app:layout_constraintBottom_toTopOf="@+id/Scroll"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/calender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua"
            android:text="Hanger"
            android:textSize="40dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/StylerBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/styler"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/VentilBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/wind"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            app:backgroundTint="@color/black" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Scroll"
        app:layout_constraintTop_toBottomOf="@+id/top_menu"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth1"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth3"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth2"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth4"
                    android:id="@+id/cloth3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth4"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth4"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth5"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth1"
                    android:id="@+id/cloth6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth7"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth2"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth8"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth3"
                    android:id="@+id/cloth9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth10"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth2"
                    android:layout_marginRight="20dp"
                    android:id="@+id/cloth11"/>

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="168dp"
                    android:background="@drawable/cloth3"
                    android:id="@+id/cloth12"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/parent"
        tools:layout_editor_absoluteY="600dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:layout_marginBottom="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AddBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/plus_btn"
            android:layout_marginRight="65dp"
            android:textSize="30dp"
            android:text="+"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>